    {{!-- Form thông tin người dùng --}}
    <div 
    class="form-thongtin-cover form-cover z-3 fixed-top d-none justify-content-center align-items-center" 
    onclick="closeForm('.form-thongtin-cover')">
        <div class="p-3 rounded-2 w-auto h-auto position-relative" 
        onclick="event.stopPropagation()" 
        style=" background-color: #E8E8E8; min-width: 400px; ">
            
            {{!-- Nút đóng form --}}
            <button class="btn btn-close position-absolute top-0 end-0 m-0 me-1 mt-1 btn-danger fw-bolder"
            onclick="closeForm('.form-thongtin-cover')"></button>

            <h3 class="form-thongtin-title text-center text-success mb-4">Thông Tin Tài Khoản</h3>

            <form class="form-thongtin" action="/{{role}}/accupdate/{{info.MaND}}" method="POST" enctype="multipart/form-data" onsubmit="showLoading()">
                <input type="hidden" name="HinhTTCu">

                <div class="d-flex">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="" height="230" width="150" class="AVTTT border rounded-3"
                        style="object-fit: cover; object-position: center;" alt="Ảnh đại diện">
                        </div>
                    <div class="ms-2 w-100">
                        <div class="mb-3">
                            <label class="form-label">Họ tên:</label>
                            <input type="text" name="HoTenTT" class="form-control">
                            <small class="text-danger d-none" id="HoTenTTError">a</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">CCCD:</label>
                            <input type="text" name="CMNDTT" class="form-control">
                            <small class="text-danger d-none" id="CMNDTTError">a</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Năm sinh:</label>
                            <input type="date" name="NamSinhTT" class="form-control">
                            <small class="text-danger d-none" id="NamSinhTTError">a</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">SDT:</label>
                            <input type="text" name="SDTTT" class="form-control">
                            <small class="text-danger d-none" id="SDTTTError">a</small>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ liên hệ:</label>
                    <div class="row g-2">
                        <div class="col-12">
                            <input type="text" id="street" class="form-control" placeholder="Số nhà, tên đường..." oninput="updateAddressString()">
                        </div>
                        <div class="col-12">
                            <select class="form-select" id="province" onchange="updateAddressString()">
                                <option value="">-- Chọn Tỉnh/Thành phố --</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <select class="form-select" id="district" disabled onchange="updateAddressString()">
                                <option value="">-- Chọn Quận/Huyện --</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <select class="form-select" id="ward" disabled onchange="updateAddressString()">
                                <option value="">-- Chọn Phường/Xã --</option>
                            </select>
                        </div>
                    </div>

                    <input type="text" name="ThuongTruTT" class="form-control mt-3" readonly id="fullAddress">
                    <small class="text-danger d-none" id="ThuongTruTTError">Vui lòng nhập đầy đủ địa chỉ</small>
                </div>
                <div class="mb-3">
                    <label class="form-label">Ảnh người dùng:</label>
                    <input type="file" name="HinhTT" class="form-control" placeholder="Chọn ảnh"  onchange="xemThuAnh(this)">
                    <small class="text-danger d-none" id="HinhTTError">Hãy chọn 1 ảnh</small>
                </div>
                <div class="text-center">
                    <button class="btn btn-success px-4" type="submit">Lưu Thông Tin</button>
                </div>
            </form>
        </div>
    </div>

     {{!-- Form đổi mật khẩu --}}
    <div 
    class="form-doimk-cover form-cover z-3 fixed-top d-none justify-content-center align-items-center" 
    onclick="closeForm('.form-doimk-cover')">
        <div class="p-3 rounded-2 w-auto h-auto position-relative" 
        onclick="event.stopPropagation()" 
        style=" background-color: #E8E8E8; min-width: 400px; ">
            
            {{!-- Nút đóng form --}}
            <button class="btn btn-close position-absolute top-0 end-0 m-0 me-1 mt-1 btn-danger fw-bolder"
            onclick="closeForm('.form-doimk-cover')"></button>

            <h3 class="form-doimk-title text-center text-success mb-4">Đổi Mật Khẩu</h3>

            <form class="form-doimk" action="/{{role}}/mkupdate" method="POST" onsubmit="showLoading()">
                <input type="hidden" name="MaNDCMK" value="{{info.MaND}}">
                <div class="mb-3">
                    <label class="form-label">Mật khẩu cũ:</label>
                    <div class="input-group">
                        <input type="password" name="MKC" class="form-control" id="MKCInput">
                        <span class="input-group-text" id="toggleMKC" style="cursor: pointer;">
                            <i class="bi bi-eye" id="iconMKC"></i>
                        </span>
                    </div>
                    <small class="text-danger d-none" id="MKCError">Lỗi mật khẩu cũ</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu mới:</label>
                    <div class="input-group">
                        <input type="password" name="MKM" class="form-control" id="MKMInput">
                        <span class="input-group-text" id="toggleMKM" style="cursor: pointer;">
                            <i class="bi bi-eye" id="iconMKM"></i>
                        </span>
                    </div>
                    <small class="text-danger d-none" id="MKMError">Lỗi mật khẩu mới</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Xác nhận mật khẩu mới:</label>
                    <div class="input-group">
                        <input type="password" name="XNMKM" class="form-control" id="XNMKMInput">
                        <span class="input-group-text" id="toggleXNMKM" style="cursor: pointer;">
                            <i class="bi bi-eye" id="iconXNMKM"></i>
                        </span>
                    </div>
                    <small class="text-danger d-none" id="XNMKMError">Lỗi xác nhận mật khẩu</small>
                </div>
                <div class="text-center">
                    <button class="btn btn-success px-4" name="btnLuuCMK" value="1" type="submit">Lưu mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
    {{!-- Moda thông báo thành công --}}
    <div class="modal fade" id="statusModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog modal-dialog-centered modal-sm"> <div class="modal-content text-center" id="modalContent">
                <div class="modal-body text-center">
                    <i id="notifyIcon" class="status-icon bi"></i>
                    <h4 id="notifyTitle" class="modal-title fw-bold h4"></h4>
                </div>
                
                <div id="timerBar" class="timer-bar"></div>
            </div>
        </div>
    </div>
    {{!-- Loading --}}
